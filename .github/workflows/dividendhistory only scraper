name: Run DividendHistory.org Only Scraper

on:
  workflow_dispatch:
  schedule:
    - cron: '0 8 * * 1'  # Weekly on Monday at 08:00 UTC

permissions:
  contents: write

jobs:
  run-divhist-only:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: |
          pip install --upgrade pip
          pip install pandas lxml requests

      - name: Run DividendHistory.org only scraper
        run: python dividendhistory_only_scraper.py

      - name: Commit and push CSVs
        run: |
          git config --global user.name "github-actions[bot]"
          git config --global user.email "github-actions[bot]@users.noreply.github.com"
          git add dividendhistory_only_canada.csv dividendhistory_only_us.csv
          git commit -m "Update DividendHistory.org only data" || echo "Nothing to commit"
          git push
